{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "./build",
    "baseUrl": ".",
  },
  "include": ["src/**/*", "scripts/*", "config/*"],
  "files": ["./env.d.ts"]
}
